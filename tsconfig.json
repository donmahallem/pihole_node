{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist",
        "rootDir": "./src",
        "sourceMap": false,
        "declaration": false
    },
    "typeAcquisition": {
        "enable": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "baseUrl": "./src",
    "exclude": [
        "node_modules"
    ]
}